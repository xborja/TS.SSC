@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}

<div class="error-page">
    <h2 class="headline text-red">500</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> Ups! Algo salió mal.</h3>

        <p>
            Hubo un error procesando su requerimiento. Por favor, inténtelo de nuevo.<br>
            Si el error persiste, contacte al soporte técnico.
        </p>
        <p>el mensaje es el siguiente: @Model.Exception.Message</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-default" role="button">Home</a>
    </div>
</div>